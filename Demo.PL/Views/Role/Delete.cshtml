@model RoleViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1> Are you sure to Delete this Role</h1>

<form asp-action="ConfirmDelete" method="post">
    <div asp-validation-summary="All"></div>

    <partial name="PartialViews/_DeleteDetailsPartialViews" />

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit </a>
        <a asp-action="Index" class=" btn btn-light"> Back To List </a>

   
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">  Cancel </a>
</form>