@model EmployeeViewModel
@inject IUnitOfWork _unitOfWork

@{
    var departments = new SelectList(_unitOfWork.DepartmentRepositry.GetAll(), nameof(Department.Id), nameof(Department.Name));
}


<div class="form-group ">
    <label class="col-form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group ">
    <label class="col-form-label" asp-for="Age"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>


</div>

<div class="form-group ">
    <label class="col-form-label" asp-for="Address"></label>
    <input asp-for="Address" class="form-control" />
</div>

<div class="form-group ">
    <label class="col-form-label" asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control" />
</div>

<div class="form-group ">
    <label class="col-form-label" asp-for="ISActive"></label>
    <input asp-for="ISActive" class="form-control" />
</div>

<div class="form-group ">
    <label class="col-form-label" asp-for="Email"></label>
    <input asp-for="Email" class="form-control" />
</div>

<div class="form-group ">
    <label class="col-form-label" asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" class="form-control" />
</div>


<div class="form-group ">
    <label class="col-form-label" asp-for="department"></label>
    <select class="form-control" asp-items="@departments" asp-for="DepartmentId">
        <option value="@null">------Select Department--------- </option>
   </select>

</div>

<div class="form-group ">
    <label class="col-form-label" asp-for="HireDate"></label>
    <input asp-for="HireDate" class="form-control" />
</div >

<div class="form-group" >
    <label class="col-form-label" asp-for="Image"></label>
    <input class="form-control-file" asp-for="Image" />

</div>
