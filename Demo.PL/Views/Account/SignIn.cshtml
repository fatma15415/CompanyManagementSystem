@model SignInModelView
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>SignIn</h1>

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignIn" >
			<div asp-validation-summary="All"></div>

			<input class="text email" asp-for="@Model.Email" placeholder="Email" required="">
			<input class="text" asp-for="@Model.Password" placeholder="Password" required="">
            <div class="form-check d-flex justify-content-center mb-5">
            <input class="form-check-input me-2" type="checkbox" asp-for="@Model.RememberMe" id="form2Example3cg" />
                <label class="form-check-label" for="form2Example3g">
                    Remember Me
                </label>
            </div>
            <input type="submit" value="SignIn">
		</form>
        <div class="col-6">
            <p> you Don't have an account
                <a style="text-decoration:none;" asp-action="SignUp" asp-controller="Account">Register Now !</a>
            </p>
            <p> <a style="text-decoration:none;" asp-action="ForgetPassword" asp-controller="Account">Forget Password !</a>
            </p>
        </div>
	</div>
</div>
@section  ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
    }

	


 

 
  

   
